<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/green_light"
    android:background="@drawable/rounded_corners">

    <TextView
        android:id="@+id/type_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Type:" />

    <TextView
        android:id="@+id/credit_type_tw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:textColor="@color/black_bank"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/type_tw"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/type_tw"
        app:layout_constraintTop_toTopOf="@+id/type_tw"
        tools:text="Differentiated" />



    <TextView
        android:id="@+id/remaining_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/type_tw"
        app:layout_constraintTop_toBottomOf="@+id/type_tw"
        tools:text="Remaining credit term:" />

    <TextView
        android:id="@+id/status_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/remaining_tw"
        app:layout_constraintTop_toBottomOf="@+id/remaining_tw"
        tools:text="Credit status:" />

    <TextView
        android:id="@+id/credit_status_tw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:textColor="@color/black_bank"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/status_tw"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/status_tw"
        app:layout_constraintTop_toTopOf="@+id/status_tw"
        tools:text="Active" />

    <TextView
        android:id="@+id/remaining_credit_balance_tw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:textColor="@color/black_bank"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/remaining_tw"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/remaining_tw"
        app:layout_constraintTop_toTopOf="@+id/remaining_tw"
        tools:text="100" />

    <TextView
        android:id="@+id/months_tw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:textColor="@color/black_bank"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/remaining_credit_balance_tw"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/remaining_credit_balance_tw"
        app:layout_constraintTop_toTopOf="@+id/remaining_credit_balance_tw"
        tools:text="BYN" />

</androidx.constraintlayout.widget.ConstraintLayout>